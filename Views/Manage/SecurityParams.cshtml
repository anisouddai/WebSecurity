@using WebSecurity.Models.ManageViewModels
@model WebSecurity.Models.ManageViewModels.SecurityParamsViewModel
@{
    ViewData["Title"] = "Security Settings";
}

<form asp-controller="Manage" asp-action="SecurityParams" method="post" id="registerForm">
    
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--stretch mdl-cell--4-col-desktop mdl-cell--2-offset-desktop mdl-cell--4-col-tablet mdl-cell-4-col-phone" style="padding-right: 25px">
            <h3>Paramètres de sécurité</h3>
        </div>
    </div>

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--stretch mdl-cell--4-col-desktop mdl-cell--2-offset-desktop mdl-cell--4-col-tablet mdl-cell-4-col-phone" style="padding-right: 25px">

            <h4>Gestion de mot de passe</h4>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="RequiredLength" class="mdl-textfield__label"></label>
                <input asp-for="RequiredLength" class="mdl-textfield__input"/>
                <span asp-validation-for="RequiredLength" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="RequireDigit" class="mdl-textfield__label"></label>
                <input asp-for="RequireDigit" class="mdl-textfield__input" type="checkbox"/>
                <span asp-validation-for="RequireDigit" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="RequireNonAlphanumeric" class="mdl-textfield__label"></label>
                <input asp-for="RequireNonAlphanumeric" class="mdl-textfield__input" type="checkbox"/>
                <span asp-validation-for="RequireNonAlphanumeric" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="RequireUppercase" class="mdl-textfield__label"></label>
                <input asp-for="RequireUppercase" class="mdl-textfield__input" type="checkbox"/>
                <span asp-validation-for="RequireUppercase" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="RequireLowercase" class="mdl-textfield__label"></label>
                <input asp-for="RequireLowercase" class="mdl-textfield__input" type="checkbox"/>
                <span asp-validation-for="RequireLowercase" class="text-danger"></span>
            </div>
            <br/>

        </div>

        <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--4-col-tablet mdl-cell-4-col-phone" style="padding-left: 25px">
            <h4>Gestion d'authentification</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="NbTentatives" class="mdl-textfield__label"></label>
                <input asp-for="NbTentatives" class="mdl-textfield__input"/>
                <span asp-validation-for="NbTentatives" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label asp-for="FailedLoginDelay" class="mdl-textfield__label"></label>
                <input asp-for="FailedLoginDelay" class="mdl-textfield__input"/>
                <span asp-validation-for="FailedLoginDelay" class="text-danger"></span>
            </div>

            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Appliquer les nouveaux paramètres</button>

        </div>

    </div>

</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
